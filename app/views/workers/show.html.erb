<h2><%= @restaurant.name %></h2>
<h3><%= @worker.first_name %> <%= @worker.last_name %></h3>
<%= link_to 'Edit Worker', edit_worker_path(@worker) %>
<h3>Stations</h3>
<% @worker.skills.each do |skill| %>
  <p>•<%= skill.station.name %> - <%= skill.level %>/5 - <%= link_to '🗑️', skill_path(skill), method: :delete %></p>
<% end %>

<%= link_to '+Add a skill', new_worker_skill_path(@worker), class: 'btn btn-outline-warning' %>
