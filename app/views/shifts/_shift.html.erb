<%= turbo_frame_tag dom_id(shift), class:"table-data row text-center align-items-center p-1" do %>
  <div class="cell col text-start"><%= shift.worker.number %></div>
  <div class="cell col-4 text-start"><%= "#{shift.worker.first_name} #{shift.worker.last_name}" %></div>
  <div class="cell col divisor starting-time"><%= shift.start.strftime("%d/%b %H:%M") %></div>
  <div class="cell col finishing-time"><%= shift.finish.strftime("%d/%b %H:%M") %></div>
  <div class="cell col-2 d-flex align-items-center justify-content-center">
    <%= link_to 'Edit', edit_shift_path(shift), class: "btn btn-outline-warning rounded-pill col-4 m-1 mt-0 mb-0" %>
    <%= link_to 'X', shift_path(shift), class: "btn btn-outline-danger rounded-pill col-3 m-1", method: :delete %>
  </div>
<% end %>
